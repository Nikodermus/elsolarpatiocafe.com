@require "../helpers/mixins.styl"

.flotante
    background-color: rgba(0, 0, 0, 0.4)
    height: 100vh
    left: 0
    opacity: 50
    position: fixed
    top: 0
    width: 100vw
    z-index: 3000

    &__contenido
        background-color: white
        margin: 0 auto
        max-width: 500px
        position: relative
        top: 50%
        transform: translateY(-50%)

    &__entradas
        background-color: #6fcecf

    &__titulo
        color: white
        content: "none"
        padding: 1rem
        text-align: left
        width: 100%

        &::before
            content: ""
            content: none

.lista
    padding-bottom: 2rem

    &__titulo
        color: black
        display: inline-block
        font-size: 1rem
        font-weight: 700
        text-align: left

    &__flotante
        margin: 0 3rem

        &::marker
            color: #6fcecf
            font-size: 2rem
            margin-right: -10px

    &__encabezado
        margin-top: 1rem

    &__precios
        color: black
        float: right
        font-size: 1rem
        font-weight: 700
        text-align: right

        &--dos
            color: black
            float: right
            font-size: 1rem
            font-weight: 700
            margin-top: 0.5rem
            text-align: right

    &__descripcion
        font-size: 1rem
        font-weight: 300
        width: 80%

.opcion
    &__texto
        display: inline-block
        font-weight: 700
        margin-left: 2rem
        margin-top: 0.5rem

.equis
    background-color: transparent
    color: black
    float: right
    transform: translateY(-260%)

.parrillada
    padding: 2rem

    &__subtitulo
        margin-top: 1rem
        text-align: center

    &__subtitulos
        color: #882f2b
        font-size: 0
        font-weight: 300
        text-align: center

    &__precio
        font-size: 0

        &::marker
            color: #882f2b
            font-size: 2rem
            margin-right: -10px

.subtitulos
    display: inline-block
    font-size: 1rem
    margin-top: 1rem

    &__uno
        padding-left: 2rem
        text-align: left
        vertical-align: top
        width: 60%

    &__dos
        width: 20%

.descripcion-parrillada
    &__uno
        display: inline-block
        font-size: 1rem
        font-weight: 700
        margin-top: 1rem

    &__texto
        text-align: left
        vertical-align: top
        width: 60%

    &__precio
        text-align: center
        width: 20%

    &__parrafo
        font-size: 1rem
        font-weight: 300

.mas
    color: #882f2b
    display: inline-block
    margin: 0 0.5rem
    transform: scale(2) translateY(0.1rem)

.fuertes
    &__titulo-1
        background-color: #f3a246

    &__flotante-lista::marker
        color: #f3a246
        font-size: 2rem
        margin-right: -10px

    &__columna
        float: left
        width: 50%

    &__titulo
        color: #f3a246
        font-size: 2rem
        margin-top: 1rem
        padding-left: 2rem

        ::marker
            margin-left: 2rem

    &.flotante__contenido
        max-width: 1000px

.postres
    &__titulo
        background-color: #cad54e

    &__flotante-lista::marker
        color: #cad54e
        font-size: 2rem
        margin-right: -10px

.bebidas
    &__titulo
        background-color: #cad54e

    &__flotante-lista::marker
        color: #cad54e
        font-size: 2rem
        margin-right: -10px

    &__flotante-contenido
        max-width: 850px
